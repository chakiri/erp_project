<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>

        <!-- afin de pouvoir lire les fichier css de webpack -->
        {{ encore_entry_link_tags('app') }}

        <link rel="stylesheet" href="{{ asset('build/theme.css') }}">
        <link rel="stylesheet" href="{{ asset('build/font-face.css') }}">

        <!-- Bootstrap CSS-->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    </head>

    <body class="animsition">
    <div class="">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="{{ path('index_default') }}">
                                <img src="{{ asset('build/images/logoERPv2couleur.png') }}" alt="MyERP">
                            </a>
                        </div>

                        <!-- FLASH MESSAGE -->
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="sufee-alert alert with-close alert-{{ label }} alert-dismissible fade show">
                                    {{ message }}
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                </div>
                            {% endfor %}
                        {% endfor %}
                        <!-- END FLASH MESSAGE -->

                        {% block form %}{% endblock %}

                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <!-- afin de pouvoir lire les fichier css de webpack -->
    {{ encore_entry_script_tags('app') }}

    <script type="text/javascript" src="{{ asset('build/app.js')}}"></script>
    <script type="text/javascript" src="{{ asset('build/main.js')}}"></script>
    </body>
</html>
