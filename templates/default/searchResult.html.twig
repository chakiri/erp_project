{% extends 'base.html.twig' %}

{% block title %}Results{% endblock %}

{% block body %}
    <!-- MAIN CONTENT-->
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 m-b-25">
                    <div class="overview-wrap">
                        <h2 class="title-1">Results Search for "{{ querySearch }}"</h2>
                    </div>
                </div>
            </div>
            {% if results is empty %}
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-secondary" role="alert">
                           No Results found
                        </div>
                    </div>
                </div>
            {% endif %}
            {% for resultByEntity in results %}
                {% for result in resultByEntity %}
                    {% set path = result.entity ~ "_show" %}
                    <div class="search_result">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card border border-success">
                                    <a href="{{ path(path, {'id': result.id }) }}">
                                        <div class="card-header">
                                            <strong class="card-title">{{ result.name ?? result.reference}}
                                                <small>
                                                    <span class="badge badge-success float-right mt-1">{{ result.entity }}</span>
                                                </small>
                                            </strong>
                                        </div>
                                        <div class="card-body">
                                            {% if result.entity == "product" %}
                                                <p class="card-text">{{ result.description }}</p>
                                            {% elseif result.entity == "customer" %}
                                                <p class="card-text">{{ result.email }}</p>
                                                <p class="card-text">{{ result.phone }}</p>
                                            {% elseif result.entity == "order" %}
                                                <p class="card-text">{{ result.customer }}</p>
                                                <p class="card-text">{{ result.dateOrder|date('d-M-Y H:m')  }}</p>
                                            {% endif %}
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
    <!-- END MAIN CONTENT-->

    {% block javascripts %}{% endblock %}
{% endblock %}
