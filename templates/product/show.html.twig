{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>{{ product.name }}</h1>
    <p>{{ product.type }}</p>
    <p>{{ product.description }}</p>
    <p>{{ product.stock }}</p>
    
    {% if product.filename %}
        <img src="{{ vich_uploader_asset(product, 'imageFile') }}" alt="{{ product.filename }}" width="100px" height="100px">
    {% endif %}
</div>
{% endblock %}
