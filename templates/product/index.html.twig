{% extends 'base.html.twig' %}

{% block title %}Products List{% endblock %}

{% block body %}

    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="title-1 m-b-35">Products</h2>

                    <div class="table-data__tool">
                        <!-- FILTERS -->
                        {#<div class="table-data__tool-left">
                            <div class="rs-select2--light rs-select2--md">
                                <select class="js-select2" name="property">
                                    <option selected="selected">All Properties</option>
                                    <option value="">Option 1</option>
                                    <option value="">Option 2</option>
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>
                            <div class="rs-select2--light rs-select2--sm">
                                <select class="js-select2" name="time">
                                    <option selected="selected">Today</option>
                                    <option value="">3 Days</option>
                                    <option value="">1 Week</option>
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>
                            <button class="au-btn-filter"><i class="zmdi zmdi-filter-list"></i>filters</button>
                        </div>#}
                        <div class="table-data__tool-left">
                            {{ form_start(productSearchForm) }}

                            <div class="rs-select2--light rs-select2--md">
                                {{ form_widget(productSearchForm.type, {'attr': {'class': 'js-select2'}}) }}
                            </div>

                            <div class="rs-select2--light rs-select2--sm">
                                {{ form_widget(productSearchForm.stocked, {'attr': {'class': 'js-select2'}}) }}
                            </div>

                            <button type="submit" class="au-btn-filter"><i class="zmdi zmdi-filter-list"></i>filters</button>
                            {{ form_end(productSearchForm) }}
                        </div>
                        <!-- END FILTERS -->

                        <!-- EXPORT -->
                        <div class="table-data__tool-right">
                            <a href="{{ path('product_new') }}" class="au-btn au-btn-icon au-btn--green au-btn--small">
                                <i class="zmdi zmdi-plus"></i>add Product</a>
                            <div class="rs-select2--dark rs-select2--sm rs-select2--dark2">
                                <select class="js-select2" name="export" onchange="location = this.value;">
                                    <option selected="selected">Export</option>
                                    <option value="{{ path('product_export') }}">CSV</option>
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>
                        </div>
                        <!-- END EXPORT -->
                    </div>

                    <!-- DATA TABLE-->
                    <div class="table-responsive m-b-40">
                        <table class="table table-borderless table-data3">
                            <thead>
                            <tr>
                                <th>Reference</th>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Name</th>
                                <th>Stock</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for product in products %}
                                <tr>
                                    <td>{{ product.reference }}</td>
                                    <td>{{ product.createdAt|date("m/d/Y") }}</td>
                                    <td>{{ product.type.name }}</td>
                                    <td>{{ product.name }}</td>
                                    <td {% if product.stock == 0 %}class="denied">Empty{% else %}<td class="process">{{ product.stock }}{% endif %}</td>
                                    <td>
                                        <div class="table-data-feature">
                                            <a href="{{ path('product_show', {'id' : product.id}) }}" class="item" data-toggle="tooltip" data-placement="top" title="More">
                                                <i class="zmdi zmdi-more"></i>
                                            </a>
                                            <a href="{{ path('product_edit', {'id' : product.id}) }}" class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                                <i class="zmdi zmdi-edit"></i>
                                            </a>
                                            <div class="confirmDelete" data-toggle="tooltip" data-placement="top" title="Delete">
                                                <button type="button" class="item" data-url="{{ path('product_delete', {'id': product.id}) }}" data-toggle="modal" data-target="#confirmDeleteModal">
                                                    <i class="zmdi zmdi-delete"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- END DATA TABLE-->
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 offset-md-4 mr-auto ml-auto m-b-30">
                    <div class="navigation">
                        {{ knp_pagination_render(products) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block modals %}
    <!-- modal static -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="staticModalLabel" aria-hidden="true"
         data-backdrop="static">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticModalLabel">Remove order</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>
                        Do you really want to remove this product ?
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <a href="#" class="removeOrderSubmit btn btn-primary">Confirm</a>
                </div>
            </div>
        </div>
    </div>
    <!-- end modal static -->
{% endblock %}