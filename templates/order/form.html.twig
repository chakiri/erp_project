{% extends 'base.html.twig' %}

{% import _self as formMacroPrototype %}

{% block title %}
    {% if editMode %}Edit Order{% else %}New Order{% endif %}
{% endblock %}

{% block body %}
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row m-t-25">
                <div class="col-lg-10">
                    <div class="card">
                        <div class="card-header">
                            {% if editMode %}
                                <strong>Edit</strong> Order
                            {% else %}
                                <strong>New</strong> Order
                            {% endif %}
                        </div>
                        {{ form_start(formOrder, {'attr': {'class': 'form-horizontal'}}) }}
                        <div class="card-body card-block">
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    {{ form_label(formOrder.reference)}}
                                </div>
                                <div class="col-12 col-md-9">
                                    {{ form_widget(formOrder.reference, {'attr': {'class': 'form-control', 'readonly': 'true'}}) }}
                                    <small class="form-text text-muted">Reference generated automatically</small>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    {{ form_label(formOrder.orderItems) }}
                                </div>
                                <div class="col-12 col-md-9 products" data-prototype="{{ formMacroPrototype.orderItemRow(formOrder.orderItems.vars.prototype)|e('html_attr') }}">
                                    {% for orderItem in formOrder.orderItems %}
                                        {{ formMacroPrototype.orderItemRow(orderItem) }}
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    {{ form_label(formOrder.customer) }}
                                </div>
                                <div class="col-12 col-md-9">
                                    {{ form_widget(formOrder.customer, {'id' : 'select', 'attr' : {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    {{ form_label(formOrder.state) }}
                                </div>
                                <div class="col-12 col-md-9">
                                    {{ form_widget(formOrder.state, {'attr' : {'class': 'form-control'}}) }}
                                </div>
                            </div>
                        </div>

                        {{ form_widget(formOrder.orderItems) }}  {# cette ligne ne fait rien mais evite le render automatique avant le form_end #}

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fa fa-dot-circle-o"></i> Submit
                            </button>
                            <button type="reset" class="btn btn-danger btn-sm">
                                <i class="fa fa-ban"></i> Reset
                            </button>
                        </div>
                        {{ form_end(formOrder) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% macro orderItemRow(orderItem) %}
    <a href="#" class="js-remove-form-product float-right">
        <span class="fa fa-close"></span>
    </a>
    <div class="row m-b-10">
        <div class="col-12 col-md-8">
            {{ form_widget(orderItem.product) }}
        </div>
        <div class="col-12 col-md-4">
            {{ form_widget(orderItem.quantity) }}
        </div>
    </div>
{% endmacro %}


{% block javascripts %}
    <script type="text/javascript" src="{{ asset('build/orderProductsPrototype.js') }}"></script>
{% endblock %}