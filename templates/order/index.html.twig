{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 m-b-30">

                    <h3 class="title-5 m-b-35">List Orders</h3>

                    <!-- FILTER -->
                    <div class="table-data__tool">
                        <div class="table-data__tool-left">
                            <form action="" method="get">
                                <div class="rs-select2--light rs-select2--md">
                                    <select class="js-select2" name="status">
                                        <option value="">Status</option>
                                        <option value="1">Processed</option>
                                        <option value="0">Denied</option>
                                    </select>
                                    <div class="dropDownSelect2"></div>
                                </div>
                                <div class="rs-select2--light rs-select2--sm">
                                    <select class="js-select2" name="time">
                                        <option value="">Time</option>
                                        <option value="1d">Today</option>
                                        <option value="3d">3 Days</option>
                                        <option value="1w">1 Week</option>
                                        <option value="1m">1 Month</option>
                                    </select>
                                    <div class="dropDownSelect2"></div>
                                </div>
                                <button type="submit" class="au-btn-filter"><i class="zmdi zmdi-filter-list"></i>filters</button>
                            </form>
                        </div>
                        <div class="table-data__tool-right">
                            <a href="{{ path('order_new') }}" class="au-btn au-btn-icon au-btn--green au-btn--small">
                                <i class="zmdi zmdi-plus"></i>new order</a>
                            <div class="rs-select2--dark rs-select2--sm rs-select2--dark2">
                                <select class="js-select2" name="export" onchange="location = this.value;">
                                    <option selected="selected">Export</option>
                                    <option value="{{ path('order_export') }}">CSV</option>
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>
                        </div>
                    </div>
                    <!-- END FILTER -->

                    <!-- DATA TABLE -->
                    <div class="table-responsive table-responsive-data2">
                        <table class="table table-data2">
                            <thead>
                            <tr>
                                <th>
                                    <label class="au-checkbox">
                                        <input type="checkbox">
                                        <span class="au-checkmark"></span>
                                    </label>
                                </th>
                                <th>reference</th>
                                <th>customer</th>
                                <th>product</th>
                                <th>date</th>
                                <th>status</th>
                                <th>price</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for order in orders %}
                                <tr class="tr-shadow">
                                    <td>
                                        <label class="au-checkbox">
                                            <input type="checkbox">
                                            <span class="au-checkmark"></span>
                                        </label>
                                    </td>
                                    <td>{{ order.reference }}</td>
                                    <td>
                                        <span class="block-email">{{ order.customer }}</span>
                                    </td>
                                    <td class="desc">
                                        <div class="overflow">
                                            {% for orderItem in order.orderItems %}
                                                <a href="{{ path('product_show', {'id': orderItem.product.id}) }}">{{ orderItem.product|striptags|slice(0, 20) }}...</a>
                                            {% endfor %}
                                        </div>
                                    </td>
                                    <td>{{ order.dateOrder|date('d-M-Y')  }}</td>
                                    <td>
                                        {% if order.state == true %}<span class="status--process">Processed</span>
                                        {% else %} <span class="status--denied">Denied</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ order.price ?? "0" }}â‚¬</td>
                                    <td>
                                        <div class="table-data-feature">
                                            <a href="{{ path('order_invoice', {'id': order.id}) }}" target="_blank" class="item" data-toggle="tooltip" data-placement="top" title="Invoice">
                                                <i class="zmdi zmdi-mail-send"></i>
                                            </a>
                                            <a href="{{ path('order_show', {'id': order.id}) }}" class="item" data-toggle="tooltip" data-placement="top" title="View">
                                                <i class="zmdi zmdi-eye"></i>
                                            </a>
                                            <a href="{{ path('order_edit', {'id': order.id}) }}" class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                                <i class="zmdi zmdi-edit"></i>
                                            </a>
                                            <div class="confirmDelete" data-toggle="tooltip" data-placement="top" title="Delete">
                                                <button type="button" class="item" data-url="{{ path('order_delete', {'id': order.id}) }}" data-toggle="modal" data-target="#confirmDeleteModal">
                                                    <i class="zmdi zmdi-delete"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="spacer"></tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- END DATA TABLE -->
                </div>
            </div>

            <!-- PAGINATION -->
            <div class="row">
                <div class="col-md-4 offset-md-4 mr-auto ml-auto m-b-30">
                    <div class="navigation">
                        {{ knp_pagination_render(orders) }}
                    </div>
                </div>
            </div>
            <!-- END PAGINATION -->
        </div>
    </div>
{% endblock %}

{% block modals %}
    <!-- modal static -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="staticModalLabel" aria-hidden="true"
         data-backdrop="static">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticModalLabel">Remove product</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>
                        Do you really want to remove this order ?
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <a href="#" class="removeOrderSubmit btn btn-primary">Confirm</a>
                </div>
            </div>
        </div>
    </div>
    <!-- end modal static -->
{% endblock %}