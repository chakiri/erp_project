{% extends 'form.html.twig' %}

{% block title%}Login{% endblock %}

{% block form %}

    {% if error %}
        <div class="alert alert-danger" role="alert">
            {{ error.messageKey }}
        </div>

    {% endif %}

    <div class="login-form">
        <form action="" method="post">
            <div class="form-group">
                <label>Email Address</label>
                <input class="au-input au-input--full" type="email" name="_username" value="{{ lastUsername }}" placeholder="Email..." required>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="au-input au-input--full" type="password" name="_password" placeholder="Password..." required>
            </div>
            <div class="login-checkbox">
                <label>
                    <input type="checkbox" name="remember">Remember Me
                </label>
                <label>
                    <a href="{{ path('security_forgotten_password') }}">Forgotten Password?</a>
                </label>
            </div>
            <button type="submit" class="au-btn au-btn--block au-btn--green m-b-20">sign in</button>
            <div class="social-login-content">
                <div class="social-button">
                    <button class="au-btn au-btn--block au-btn--blue m-b-20">sign in with facebook</button>
                    <button class="au-btn au-btn--block au-btn--blue2">sign in with twitter</button>
                </div>
            </div>
        </form>
        <div class="register-link">
            <p>
                Don't you have account?
                <a href="{{ path('security_registration') }}">Sign Up Here</a>
            </p>
        </div>
    </div>

{% endblock %}