{% extends 'base.html.twig' %}

{% block title %}Customers List{% endblock %}

{% block body %}

    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <!-- FILTERS -->
            <div class="row">
                <div class="col-md-10">
                    <div class="table-data__tool">
                        <div class="table-data__tool-left">
                            <form action="" method="get">
                                <div class="rs-select2--light rs-select2--md">
                                    <select class="js-select2" name="type">
                                        <option value="">Type</option>
                                        <option value="customer">Customer</option>
                                        <option value="supplier">Supplier</option>
                                        <option value="other">other</option>
                                    </select>
                                    <div class="dropDownSelect2"></div>
                                </div>
                                <button type="submit" class="au-btn-filter"><i class="zmdi zmdi-filter-list"></i>filters</button>
                            </form>
                        </div>
                        <div class="table-data__tool-right">
                            <a href="{{ path('customer_new') }}" class="au-btn au-btn-icon au-btn--green au-btn--small">
                                <i class="zmdi zmdi-plus"></i>add customer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END FILTERS -->
            <div class="row">
                <div class="col-lg-10">
                    <div class="top-campaign">
                        <h3 class="title-3 m-b-30">Customers</h3>
                        <div class="table-responsive">
                            <table class="table table-top-campaign">
                                <tbody>
                                    {% for customer in customers %}
                                        <tr>
                                            <td><a href="{{ path('customer_show', {'id': customer.id}) }}">{{ customer.name }}</a></td>
                                            <td>{% if customer.type == 0 %}Customer{% elseif customer.type == 1 %}Supplier{% endif %}</td>
                                            <td>NÂ° {{ customer.code }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
